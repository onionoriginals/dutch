{
  "name": "originals-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.2.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "module": "index.ts",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "start": "turbo run start --parallel",
    "clean": "rimraf node_modules bun.lock && find . -name node_modules -type d -prune -exec rm -rf {} +",
    "dev:api": "bun --cwd apps/api run dev",
    "dev:web": "npm --prefix apps/web run dev",
    "dev:dutch": "bun --cwd packages/dutch run dev",
    "start:api": "bun --cwd apps/api run start",
    "start:web": "npm --prefix apps/web run start"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "esbuild": "^0.25.10",
    "rimraf": "^6.0.1",
    "turbo": "^2.1.1",
    "typescript": "^5.4.0"
  }
}
