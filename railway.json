{
  "$schema": "https://railway.com/railway.schema.json",
  "project": {
    "name": "originals-monorepo"
  },
  "services": [
    {
      "name": "api",
      "rootDirectory": ".",
      "build": {
        "builder": "NIXPACKS",
        "installCommand": "bun install --frozen-lockfile",
        "buildCommand": "bun run build"
      },
      "startCommand": "bun apps/api/dist/index.js",
      "healthcheckPath": "/"
    }
  ]
}
