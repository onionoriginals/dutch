---
import '../styles/globals.css'
import Header from '../components/layout/Header.astro'

interface Props {
  title?: string
  /** If true, shows the ToastContainer component */
  includeToast?: boolean
  /** If true, includes the header navigation */
  includeHeader?: boolean
}

const { 
  title = 'Originals Auctions',
  includeToast = true,
  includeHeader = true
} = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-50 dark:bg-gray-950">
    {includeHeader && <Header includeToast={includeToast} />}
    <slot />
    <footer class="border-t py-6 text-center text-sm text-muted-foreground">
      <div class="mx-auto max-w-6xl px-4">Â© {new Date().getFullYear()} Originals. All rights reserved.</div>
    </footer>
  </body>
</html>
