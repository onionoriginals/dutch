---
import '../styles/globals.css'
import Header from '../components/layout/Header.astro'

interface Props {
  title?: string
  /** If true, shows the ToastContainer component */
  includeToast?: boolean
  /** If true, includes the header navigation */
  includeHeader?: boolean
}

const {
  title = 'Originals Auctions',
  includeToast = true,
  includeHeader = true
} = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#0f172a" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-background text-foreground antialiased">
    <div class="relative isolate flex min-h-screen flex-col">
      <div class="pointer-events-none absolute inset-0 -z-10 overflow-hidden">
        <div class="absolute inset-x-0 top-[-18rem] h-[30rem] bg-gradient-to-b from-primary/20 via-primary/10 to-transparent blur-3xl" />
        <div class="absolute left-1/2 top-1/2 h-[38rem] w-[38rem] -translate-x-1/2 rounded-full bg-gradient-to-br from-purple-500/10 via-sky-400/10 to-transparent blur-[180px]" />
      </div>

      {includeHeader && <Header includeToast={includeToast} />}

      <div class="flex-1">
        <slot />
      </div>

      <footer class="border-t border-border/60 bg-white/60 py-10 text-sm text-muted-foreground backdrop-blur supports-[backdrop-filter]:bg-white/40 dark:border-white/10 dark:bg-slate-950/60">
        <div class="mx-auto flex max-w-6xl flex-col gap-6 px-6 md:flex-row md:items-center md:justify-between">
          <div>
            <p class="text-xs uppercase tracking-[0.3em] text-foreground/60">Originals</p>
            <p class="mt-2 max-w-xl text-sm text-muted-foreground">
              Auction infrastructure for teams that care about craft. Every interaction has been tuned for velocity without losing the sense of ceremony collectors expect.
            </p>
          </div>
          <div class="flex flex-wrap items-center gap-3 text-xs">
            <a href="/auctions" class="btn btn-secondary h-11 px-5">Explore auctions</a>
            <a href="/docs/auction-type" class="btn btn-ghost h-11">Read the documentation</a>
          </div>
        </div>
        <div class="mx-auto mt-8 flex max-w-6xl items-center justify-between px-6 text-xs text-muted-foreground">
          <span>Â© {new Date().getFullYear()} Originals. All rights reserved.</span>
          <div class="flex items-center gap-4">
            <a href="/styles" class="hover:text-foreground">UI system</a>
            <a href="https://github.com" class="hover:text-foreground" rel="noreferrer" target="_blank">GitHub</a>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
