---
import '../styles/globals.css'
import DemoDutchEditor from '../components/auction/DemoDutchEditor'
import LiveAuctionsSection from '../components/auction/LiveAuctionsSection'
import WalletButton from '../components/ui/WalletButton'
import ToastContainer from '../components/ui/ToastContainer'
---
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Originals Auctions</title>
  </head>
  <body class="min-h-screen bg-gray-50 dark:bg-gray-950">
    <ToastContainer client:load />
    <header class="border-b bg-white/80 backdrop-blur dark:border-gray-900 dark:bg-gray-900/80">
      <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-3">
        <a href="/" class="flex items-center gap-2 text-lg font-semibold">
          <span class="inline-block h-6 w-6 rounded bg-black dark:bg-white"></span>
          <span>Originals</span>
        </a>
        <nav class="flex items-center gap-3 text-sm">
          <a href="/auctions" class="text-gray-700 hover:text-black dark:text-gray-300 dark:hover:text-white">Auctions</a>
          <a href="/docs/auction-type" class="text-gray-700 hover:text-black dark:text-gray-300 dark:hover:text-white">Docs</a>
          <a href="https://github.com" class="text-gray-700 hover:text-black dark:text-gray-300 dark:hover:text-white" rel="noreferrer" target="_blank">GitHub</a>
          <WalletButton client:load />
        </nav>
      </div>
    </header>

    <main>
       <!-- Quick Actions -->
       <section class="border-b py-12">
        <div class="mx-auto max-w-6xl px-4">
          <div class="rounded-xl border bg-gradient-to-br from-blue-50 to-indigo-50 p-8 shadow-sm dark:border-gray-800 dark:from-gray-900 dark:to-gray-800">
            <div class="flex flex-col items-center justify-center text-center">
              <h2 class="text-2xl font-semibold">Create Your Own Auction</h2>
              <p class="mt-2 max-w-2xl text-sm text-muted-foreground">
                Set up Dutch auctions in minutes. Configure pricing, timing, and reserve prices with our easy-to-use wizard.
              </p>
              <div class="mt-6 flex flex-wrap gap-3 justify-center">
                <a href="/auctions/new" class="button">Create New Auction</a>
                <a href="/auctions" class="button button-secondary">Browse All Auctions</a>
              </div>
            </div>
          </div>
        </div>
      </section>
      
      <!-- Live Auctions -->
      <section class="border-b py-12">
        <div class="mx-auto max-w-6xl px-4">
          <div class="mb-6 flex items-end justify-between">
            <div>
              <h2 class="text-2xl font-semibold">Live Auctions</h2>
              <p class="mt-1 text-sm text-muted-foreground">Active auctions ending soon</p>
            </div>
            <a href="/auctions" class="text-sm text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300 underline">
              View all auctions →
            </a>
          </div>
          <LiveAuctionsSection client:only="react" />
        </div>
      </section>

      <!-- Features -->
      <section class="py-12">
        <div class="mx-auto max-w-6xl px-4">
          <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
            <div class="rounded-lg border bg-white p-5 shadow-sm dark:border-gray-800 dark:bg-gray-900">
              <h3 class="text-base font-semibold">Typed primitives</h3>
              <p class="mt-1 text-sm text-muted-foreground">Strong TypeScript types for auctions, bids, prices, and schedules.</p>
            </div>
            <div class="rounded-lg border bg-white p-5 shadow-sm dark:border-gray-800 dark:bg-gray-900">
              <h3 class="text-base font-semibold">UI building blocks</h3>
              <p class="mt-1 text-sm text-muted-foreground">Card and list layouts, filters, and pagination components.</p>
            </div>
            <div class="rounded-lg border bg-white p-5 shadow-sm dark:border-gray-800 dark:bg-gray-900">
              <h3 class="text-base font-semibold">Bun-native APIs</h3>
              <p class="mt-1 text-sm text-muted-foreground">SQLite-backed API with Bun-first adapters and tests.</p>
            </div>
          </div>
        </div>
      </section>

      <!-- CTA -->
      <section class="border-t py-12">
        <div class="mx-auto max-w-6xl px-4">
          <div class="grid grid-cols-1 items-center gap-6 rounded-xl border bg-white p-6 shadow-sm dark:border-gray-800 dark:bg-gray-900 md:grid-cols-2">
            <div>
              <h2 class="text-2xl font-semibold">Ready to get started?</h2>
              <p class="mt-2 text-sm text-muted-foreground">Explore live auctions, create your own, or learn more about auction types.</p>
            </div>
            <div class="flex justify-end gap-3">
              <a href="/auctions" class="button">View All Auctions</a>
              <a href="/docs/auction-type" class="button button-secondary">Learn More</a>
            </div>
          </div>
        </div>
      </section>
    </main>

    <footer class="border-t py-6 text-center text-sm text-muted-foreground">
      <div class="mx-auto max-w-6xl px-4">© {new Date().getFullYear()} Originals. All rights reserved.</div>
    </footer>
  </body>
</html>
