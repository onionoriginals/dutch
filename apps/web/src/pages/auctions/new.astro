import { WalletProvider } from '../../lib/wallet/WalletContext';
import WalletButton from '../../components/ui/WalletButton';
import '../../styles/globals.css';
---
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Create Auction - Originals</title>
  </head>
  <body>
    <WalletProvider client:only="react">
      <main class="min-h-screen bg-gray-50 dark:bg-gray-900">
        <div class="mx-auto max-w-2xl px-4 py-8">
          <nav class="mb-8 flex items-center justify-between">
            <a 
              href="/auctions" 
              class="text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300 text-sm underline"
            >
              ‚Üê Back to Auctions
            </a>
            <WalletButton client:only="react" />
          </nav>
          
          <div class="rounded-lg bg-white p-6 shadow-sm dark:bg-gray-800">
            <CreateAuctionWizard client:only="react" />
          </div>
        </div>
      </main>
